            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td>{{cuerpo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-end">
                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secundary"><i class="fa fa-pencil-alt"></i></a>
                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secundary"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
