<form action="/admin/login" method="post">
  <section class="vh-60 gradient-custom">
    <div class="container py-5 h-60">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="c1ard-body p-5 text-center">
              <div class="mb-md-5 mt-md-4 pb-5">
                <p class="text-white-50 mb-5">Por favor ingrese su usuario y contraseña.</p>
                <div class="form-outline form-white mb-4">
                  <input type="text" class="form-control" placeholder="Usuario" name="usuario" />
                  <label class="form-label">Usuario</label>
                </div>
                <div class="form-outline form-white mb-4">
                  <input type="password" id="typePasswordX" class="form-control form-control-lg" placeholder="Password"
                    name="password" />
                  <label class="form-label">Contraseña</label>
                </div>
                <div>
                  <button class="btn btn-primary" type="submit">Entrar</button>
                </div>
  </form>
                    {{#if error}}
                      <div class="col-auto text-danger">
                      <p>Usuario incorrecto, por favor ingrese los datos correctamente .</p>
                      </div>
                    {{/if}}
              
    </div>
</div>
</div>
</div>
</div>
</div>
</section>